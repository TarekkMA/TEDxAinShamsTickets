<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <ImageView
            android:layout_width="@dimen/icon"
            android:layout_height="@dimen/icon"
            android:src="@drawable/qr_code_blue_50"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textColor="#000"
            android:textSize="36sp"
            android:typeface="monospace"
            android:textStyle="bold"
            tools:text="126574915"
            android:id="@+id/attender_qr_code"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/top_space"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <ImageView
            android:layout_width="@dimen/icon"
            android:layout_height="@dimen/icon"
            android:src="@drawable/name_48"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textColor="#000"
            android:textSize="20sp"
            tools:text="Tarek Mohamed Abdalla"
            android:id="@+id/attender_name"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="32dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <ImageView
            android:layout_width="@dimen/icon"
            android:layout_height="@dimen/icon"
            android:src="@drawable/ticket_blue_50"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textColor="#000"
            android:textSize="15sp"
            tools:text="Speakers"
            android:id="@+id/attender_type"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/top_space"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <ImageView
            android:layout_width="@dimen/icon"
            android:layout_height="@dimen/icon"
            android:src="@drawable/phone_48"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textColor="#000"
            android:textSize="15sp"
            tools:text="0101 365 8016"
            android:id="@+id/attender_phonenumber"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/top_space"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <ImageView
            android:layout_width="@dimen/icon"
            android:layout_height="@dimen/icon"
            android:src="@drawable/email_48"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textColor="#000"
            android:textSize="15sp"
            tools:text="tarekkma@gmail.com"
            android:id="@+id/attender_email"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/top_space"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <ImageView
            android:layout_width="@dimen/icon"
            android:layout_height="@dimen/icon"
            android:src="@drawable/id_blue_50"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textColor="#000"
            android:textSize="15sp"
            tools:text="15165065011646616"
            android:id="@+id/attender_nat_id"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/top_space"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <ImageView
            android:layout_width="@dimen/icon"
            android:layout_height="@dimen/icon"
            android:src="@drawable/rgb_circle_50"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textColor="#000"
            android:textSize="20sp"
            tools:text="Red"
            android:id="@+id/attender_fav_color"/>
    </LinearLayout>



    <LinearLayout
        android:layout_marginTop="32dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/attender_button_layout">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Confirm"
            android:layout_height="wrap_content"
            android:id="@+id/attender_confirm"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Cancel"
            android:layout_height="wrap_content"
            android:id="@+id/attender_cancel"/>
    </LinearLayout>

</LinearLayout>